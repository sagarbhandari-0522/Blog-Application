<% if @article.errors%>
    <% @article.errors.full_messages.each  do |error|%>
    <%= error %>
    <% end %>
<% end %>

<h1>New Article </h1>
<%= form_with model: @article do |form| %>
    <div>
        <%= form.label :title%> <br>
        <%= form.text_field :title%>
    </div>
    <div>
        <%= form.label :description%><br>
        <%= form.text_area :description%>
    </div>
    <div>
        <%= form.submit "Create New Article", data: {turbo: false}%>
    </div>

<% end %>